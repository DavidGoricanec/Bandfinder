<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonDataActivity">

    <EditText
        android:id="@+id/dt_Geburtsdatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:inputType="date"
        android:text="01.01.1900"
        app:layout_constraintBottom_toTopOf="@+id/txt_Ort"
        app:layout_constraintStart_toStartOf="@+id/txt_Nachname"
        app:layout_constraintTop_toBottomOf="@+id/txt_Nachname"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/txt_vorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="157dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Vorname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_Nachname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nachname"
        app:layout_constraintStart_toStartOf="@+id/txt_vorname"
        app:layout_constraintTop_toBottomOf="@+id/txt_vorname" />

    <EditText
        android:id="@+id/txt_Ort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ort"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dt_Geburtsdatum"
        app:layout_constraintTop_toBottomOf="@+id/dt_Geburtsdatum" />

    <Button
        android:id="@+id/btn_speichern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Speichern"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Ort" />
</androidx.constraintlayout.widget.ConstraintLayout>